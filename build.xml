<?xml version="1.0" encoding="UTF-8"?>
<project name="shor" default="run">
    <description>
            Simulation of Shor's algorithm.
    </description>

	<path id="compileClasspath">
		<fileset dir="lib" includes="**/*.jar" />
	</path>

	<path id="runClasspath">
		<pathelement location="classes"/>
		<path refid="compileClasspath"/>
	</path>

	
    <!-- default value for n -->
    <property name="n" value="143"/>
    <target name="run" depends="compile" description="run Shor's algorithm.  Use -Dn=143 to factor 143.">
        <java classpathref="runClasspath" classname="kemp.shor.Shor">
		<arg value="${n}"/>
        </java>
    </target>

	<target name="init">
		<mkdir dir="classes"/>
	</target>
	
    <target name="compile" depends="init" description="compile code">
    	<javac
    		srcdir="src"
    		destdir="classes"
    		classpathref="compileClasspath"/>
    </target>

   <target name="clean" description="Delete the classes etc generated by the compilation">
       <delete dir="classes"/>
   </target>

</project>
